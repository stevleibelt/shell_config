alias diffDirectories=net_bazzline_diff_directory
alias disableTouchpad='synclient TouchpadOff=1'

#e
alias enableTouchpad='synclient TouchpadOff=0'

#f
alias findBrokenSymlinks='find . -type l -! -exec test -e {} \; -print'
