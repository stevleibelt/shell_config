####

#.
alias ..='cd ..'

#a
alias ant='ant -logger org.apache.tools.ant.listener.AnsiColorLogger'
alias apacheRestart='sudo systemctl restart httpd.service'
alias apacheStart='sudo systemctl start httpd.service'
alias apacheStop='sudo systemctl start httpd.service'
alias archLinuxFindPacnew=net_bazzline_arch_linux_locate_pacnew_files

#b
alias batchConvertImageTo1024=net_bazzline_image_batch_convert_1024
alias batchConvertImageTo1920=net_bazzline_image_batch_convert_1920
alias batteryStatus='clear & acpi -i'
alias burn=net_bazzline_burn

#c
alias c=clear
alias cal='cal -3'
alias cd=net_bazzline_cd
alias cdAudioRipper=asunder
alias cdConfig='cd '$HOME'/config'
alias cdGitHub='cd '$HOME'/data/git/com/github'
alias cdPhp='cd '$HOME'/code/php'
alias compileC++11='c++ -std=c++11'
alias composerDumpAutoloadOptimized='composer dump-autoload --optimize'
alias composerUpdateNoDev='composer update --no-dev'
alias compress=net_bazzline_compress
alias convertM4aToWav=net_bazzline_convert_m4a_to_wav
alias convertMp3ToWav=net_bazzline_convert_mp3_to_wav
alias convertMkvToAvi=net_bazzline_convert_mkv_to_avi
alias convertWavToMp3=net_bazzline_convert_wav_to_mp3

#d
alias decompress=net_bazzline_decompress
alias diffDirectories=net_bazzline_diff_directory
alias docker-remove-all-images='docker ps -a -q | xargs docker rm'

#f
alias fileManager=pcmanfm
alias findFile=net_bazzline_find_file
alias findDirectory=net_bazzline_find_directory

#g
alias getExtensionFromFilename=net_bazzline_get_extension_from_filename
alias getFilenameFromFilepath=net_bazzline_get_filename_from_filepath
alias getNameFromFilename=net_bazzline_get_name_from_filename
alias gitPushToMaster='git push -u origin master'
alias guiEditor='geany'
alias guiCdRipper='asunder'

#i
alias iftop='iftop -P -B'
alias iostat='iostat -x 2'

#k
alias killSkype='killall -u $USER skype'

#l
alias l='ls -halt'
alias landslideTango='landslide -t tango -i ';

#m
alias mkdir=net_bazzline_mkdir
alias mkdirPrefixCurrentDate=net_bazzline_mkdirPrefixCurrentDate
alias mysqlRestart='sudo systemctl restart mysqld'
alias mysqlStart='sudo systemctl start mysqld'
alias mysqlStop='sudo systemctl start mysqld'

#p
alias phpunitCodeCoverage=net_bazzline_phpunit_codecoverage
alias psGrep=net_bazzline_psgrep

#r
alias r='rm -fr';
alias refreshInterface='net_bazzline_refresh_interface'
alias relogin='bash -l'
alias reloadBashEnvironment='source ~/.bashrc && clear'
alias renameAllToLower=net_bazzline_filename_to_lower_batch_rename
alias replaceStringInFiles=net_bazzline_replace_string_in_files
alias runJar='java -jar '

#s
alias svnDiff=net_bazzline_svn_diff
if [ -f $HOME'/code/sh/local/displayBatteryStatus.sh' ]; then
  alias statusBattery='sh '$HOME'/code/sh/local/displayBatteryStatus.sh'
fi
if [ -f $HOME'/code/sh/local/sensorsRefresh.sh' ]; then
  alias statusSensor='sh '$HOME'/code/sh/local/sensorsRefresh.sh'
fi
alias skype='xhost +local: && sudo -u skype /usr/bin/skype'
if [[ $NET_BAZZLINE_PACKAGE_MANAGER = 'yaourt' ]]; then
    alias software-check-unneeded-dependencies='yaourt -Qqdt'
    alias software-clean-cache='yaourt -Scc'
    alias software-fetch='yaourt -G'
    alias software-info='yaourt -Qi'
    alias software-install='yaourt -S'
    alias software-install-local='pacman -U'
    alias software-list='yaourt -Ql'
    alias software-remove='yaourt -R'
    alias software-search='yaourt -Ss'
    alias software-search-installed='yaourt -Qs'
    alias software-update='yaourt -Sy'
    alias software-upgrade='yaourt -Syu --aur'
    alias software-repository-info='yaourt -Si'
elif [[ $NET_BAZZLINE_PACKAGE_MANAGER = 'pacman' ]]; then
    alias software-check-unneeded-dependencies='pacman -Qqdt'
    alias software-clean-cache='pacman -Scc'
    alias software-fetch='pacman -G'
    alias software-info='pacman -Qi'
    alias software-install='pacman -S'
    alias software-install-local='sudo pacman -U'
    alias software-list='pacman -Ql'
    alias software-remove='pacman -R'
    alias software-search='pacman -Ss'
    alias software-search-installed='pacman -Qs'
    alias software-update='pacman -Sy'
    alias software-upgrade='pacman -Syu'
    alias software-repository-info='pacman -Si'
elif [[ $NET_BAZZLINE_PACKAGE_MANAGER = 'apt' ]]; then
    #alias software-check-unneeded-dependencies='echo "todo"'
    alias software-clean-cache='apt-get autoclean && apt-get autoremove'
    alias software-dist-upgrade='apt-get dist-upgrade'
    #alias software-fetch='echo "todo"'
    alias software-info='apt-cache show'
    alias software-install='apt-get install"'
    alias software-install-local='dpkg -i'
    alias software-list='dpkg -l'
    alias software-remove='apt-get remove'
    alias software-search='apt-cache search'
    #alias software-search-installed='echo "todo"'
    alias software-update='apt-get update'
    alias software-upgrade='apt-get upgrade'
    #alias software-repository-info='echo "todo"'
fi
alias searchAndReplaceInFiles=net_bazzline_replace_string_in_files
alias startXorg='startx; exit'
alias sshKeygen='ssh-keygen -b 4096 -t rsa'
alias startPhpWebserver=net_bazzline_php_start_internal_webserver
alias svnRevertAll='svn revert -R .'
alias syncFromHost=net_bazzline_sync_from_host
alias syncTo=net_bazzline_sync_to
alias syncToHost=net_bazzline_sync_to_host

#t
alias takeScreenshot=net_bazzline_screenshot
alias tarCreate=net_bazzline_tar_create
alias tarExtract=net_bazzline_tar_extract
alias tarList=net_bazzline_tar_list

#v
alias v=vim

#w
alias webRestart='apacheRestart mysqlRestart'
alias webStart='apacheStart mysqlStart'
alias webStop='apacheStop mysqpStop'
alias whatIsListeningOnPort=net_bazzline_what_is_listening_on_that_port
alias wirelessStatus='clear & iwlist wlan0 scan'

#x
alias x=exit
