#!/bin/bash

# order is important
declare -a FILES_TO_LOAD=('setting' 'variable' 'source' 'export' 'function' 'alias' 'automatic_start')

for FILE_TO_LOAD in ${FILES_TO_LOAD[@]}; do
    source $PATH_SHELL_CONFIG"/"$FILE_TO_LOAD

    LOCAL_FILE_TO_LOAD=$FILE_TO_LOAD".local"
    if [ -f $PATH_SHELL_CONFIG"/"$LOCAL_FILE_TO_LOAD ]; then
      source $PATH_SHELL_CONFIG"/"$LOCAL_FILE_TO_LOAD
    fi
done;
